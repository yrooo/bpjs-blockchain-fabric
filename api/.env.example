# Environment Configuration

# Server
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Hyperledger Fabric
FABRIC_NETWORK_PATH=../network
CHANNEL_NAME=bpjs-main
CHAINCODE_NAME=bpjs
FABRIC_USER=admin
FABRIC_USER_PASSWORD=adminpw

# Organizations
ORG_BPJS_MSP=BPJSMSP
ORG_RUMAHSAKIT_MSP=RumahSakitMSP
ORG_PUSKESMAS_MSP=PuskesmasMSP

# API Configuration
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bpjs-api.log

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# Database (for off-chain analytics - optional)
DATABASE_URL=postgresql://user:password@localhost:5432/bpjs_analytics
